{
  "name": "svelte-web-components-template",
  "description": "A base template for building a shareable web components library with Svelte",
  "version": "1.0.0",
  "module": "dist/index.mjs",
  "main": "dist/index.js",
  "keywords": [
    "svelte",
    "web-components",
    "library"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:demo": "rollup -c rollup.demo.config.js",
    "dev": "rollup -c rollup.demo.config.js -w",
    "start": "sirv demo/public",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.4",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "rollup": "^2.79.1",
    "rollup-plugin-clean": "^1.0.0",
    "rollup-plugin-css-only": "^4.3.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-summary": "^1.4.3",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sirv-cli": "^2.0.2",
    "svelte": "^3.0.0"
  },
  "files": [
    "dist"
  ]
}
